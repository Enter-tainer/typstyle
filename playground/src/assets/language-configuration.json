{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [["[", "]"], ["{", "}"], ["(", ")"]],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "$", "close": "$", "notIn": ["string"] }
  ],
  "autoCloseBefore": ";:.,=}])>$ \n\t",
  "surroundingPairs": [
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "*", "close": "*" },
    { "open": "_", "close": "_" },
    { "open": "`", "close": "`" },
    { "open": "$", "close": "$" }
  ]
}
